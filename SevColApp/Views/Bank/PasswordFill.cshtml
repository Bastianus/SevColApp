@model SevColApp.Models.BankAccount

@{
    ViewData["Title"] = "Home Page";
}

<html>
<body class="bankingpage">
    <form asp-action="Details">
        <table class="table table-borderless">
            <tr>
                <th class="text-right bankingtext"> Account name: </th>
                <td class="bankingtext"> @Model.AccountName</td>
            </tr>
            <tr>
                <th class="text-right bankingtext"> Account number:</th>
                <td class="bankingtext"> @Model.AccountNumber</td>
            </tr>
            <tr>
                <th class="text-right bankingtext"> Enter password: </th>
                <td>
                    <input type="password" asp-for="Password" class="form-control col-6" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </td>                    

            </tr>
            <tr class="form-group">
                <th></th>
                <td>
                    <input type="hidden" asp-for="Id" class="form-control col-6" value=@Model.Id />
                </td>
                <td>
                    <input type="submit" value="Done" class="btn btn-light" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>