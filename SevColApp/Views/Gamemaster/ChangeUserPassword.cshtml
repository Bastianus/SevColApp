@model SevColApp.Models.UserPasswordChange

@{
    ViewData["Title"] = "Change user password";
}

<html>
<body class="gmpage">
    <form asp-action="ChangeUserPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-borderless table-sm">
            <tr>
                <th class="text-right"><label>User's login name:</label></th>
                <td>
                    <input asp-for="UserLoginName" class="form-control col-6" />
                    <span asp-validation-for="UserLoginName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="text-right"><label>User's desired new password:</label></th>
                <td>
                    <input asp-for="NewPassword" class="form-control col-6" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </td>
            </tr>            
            <tr class="form-group">
                <th></th>
                <td>
                    <input type="submit" class="btn btn-dark" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>