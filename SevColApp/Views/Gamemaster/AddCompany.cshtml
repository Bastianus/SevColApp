@model SevColApp.Models.Company

@{
    ViewData["Title"] = "Add company";
}

<html>
<body class="gmpage">

    <form asp-action="AddCompany">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-borderless table-sm">
            <tr>
                <th class="text-right"><label>Company name:</label></th>
                <td>
                    <input asp-for="Name" class="form-control col-6" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th></th>
                <td>
                    <input type="submit" class="btn btn-dark" />
                </td>
            </tr>
        </table>
    </form>

</body>
</html>