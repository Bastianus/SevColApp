@model SevColApp.Models.InputOutputAccountEdit

@{
    ViewData["Title"] = "Edit bank account credits";
}

<html>
<body class="gmpage">
    @if (Model.Errors.Count == 0)
    {

    <form asp-action="EditBankAccount">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-borderless table-sm">
            <tr>
                <th class="text-right"><label>Current credits:</label></th>
                <td>@Model.Account.Credit.ToString("N0")</td>
            </tr>
            <tr>
                <th class="text-right"><label>Amount in credits to add:</label></th>
                <td>
                    <input asp-for="Amount" class="form-control col-6" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <th class="text-right"><label>Description (ignored if below 2 are empty):</label></th>
                <td>
                    <input asp-for="Description" class="form-control col-6" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <th class="text-right"><label>With a transfer from random SevCol account:</label></th>
                <td>
                    <input asp-for="FromRandomSevColAccount" class="form-control col-6" />
                    <span asp-validation-for="FromRandomSevColAccount" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <th class="text-right"><label>With a transfer from account number:</label></th>
                <td>
                    <input asp-for="AccountNumber" class="form-control col-6" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td>
                    <input asp-for="ToAccountNumber" class="hide" type="hidden" value=@Model.Account.AccountNumber>
                </td>
            </tr>
            <tr class="form-group">
                <th></th>
                <td>
                    <input type="submit" class="btn btn-dark" />
                </td>
            </tr>
        </table>
    </form>
    }

    @if (Model.Errors.Count > 0)
    {
        @foreach(var error in Model.Errors)
            {
                <h4>@error</h4>
            }
    }
</body>
</html>