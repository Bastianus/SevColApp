@model SevColApp.Models.AccountPasswordChange

@{
    ViewData["Title"] = "User password changed";
}

<html>
<body class="gmpage">
    @if (string.IsNullOrEmpty(Model.Error))
    {
        <h2>The password of user's @Model.LoginName bank account "@Model.BankAccountName" has been changed to "@Model.NewPassword".</h2>
    }
    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <h2>An error occurred:</h2>
        <h2>@Model.Error</h2>
    }

    <a asp-area="" asp-controller="Gamemaster" asp-action="Index" class="btn btn-info">Back to game master page</a>

</body>
</html>