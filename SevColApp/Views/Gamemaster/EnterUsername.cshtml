@model SevColApp.Models.User

@{
    ViewData["Title"] = "Enter username to check all accounts of user";
}

<html>
<body class="gmpage">
    <form asp-action="EnterUserName">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-borderless table-sm">
            <tr>
                <th class="text-right"><label>User's login name:</label></th>
                <td>
                    <input asp-for="LoginName" class="form-control col-6" />
                    <span asp-validation-for="LoginName" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th></th>
                <td>
                    <input type="submit" class="btn btn-dark" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>