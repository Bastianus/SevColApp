@model SevColApp.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<html>
<body class="userpage">


    @if (Model.Errors.Count == 0)
    {
        <h1 class="col align-self-center text-light">Welcome, @Model.FullName.</h1>

        @if (Model.IsGameMaster)
        {
            <a asp-area="" asp-controller="Gamemaster" asp-action="Index" class="btn btn-info">GameMaster things</a>
        }

        <a asp-area="" asp-controller="Bank" asp-action="Index" class="btn btn-light">Banking</a>

        <a asp-area="" asp-controller="Home" asp-action="Logout" class="btn btn-light">Logout</a>
    }
    @if (Model.Errors.Count > 0)
    {
        if (Model.Errors.Count > 1)
        {
            <h3 class="text-warning">@Model.Errors.Count errors occurred during logging in:</h3>
        }
        if (Model.Errors.Count == 1)
        {
            <h3 class="text-warning">An error occurred during logging in:</h3>
        }
        @foreach (var error in @Model.Errors)
        {
            <h4 class="text-warning">@error</h4>
        }

        <a asp-area="" asp-controller="Home" asp-action="Create" class="btn btn-light">Try again</a>
    }

</body>
</html>
