@model SevColApp.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<html>

<body>
    <form asp-action="login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-borderless table-sm">
            <tr>
                <th class="text-left"><label>Login name:</label></th>
                <td>
                    <input asp-for="LoginName" class="form-control" />
                    <span asp-validation-for="LoginName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="text-left"><label>Your password:</label></th>
                <td>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <input type="submit" value="Login" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </form>
    <div class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create new account</a>
    </div>
</body>


</html>
